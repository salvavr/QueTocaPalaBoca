<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_Constraste"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/queSePedira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/muli_bold"
        android:text="Serranito"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtQueSePedira"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dd_logo" />

    <ImageView
        android:id="@+id/dd_logo"
        android:layout_width="163dp"
        android:layout_height="163dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/queSePedira"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/dd_logo" />

    <EditText
        android:id="@+id/txtQueSePedira"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:fontFamily="@font/muli"
        android:hint="@string/caja_plato"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColorHint="@color/gris_Azulado"
        app:layout_constraintBottom_toTopOf="@+id/btnPlato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/queSePedira"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnPlato"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/muli_bold"
        android:text="@string/btn_plato"
        app:layout_constraintBottom_toTopOf="@+id/btnAleat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQueSePedira"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnAleat"
        android:layout_width="417dp"
        android:layout_height="66dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/muli_bold"
        android:text="@string/btn_aleat"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlato"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>